<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GamingApp.UsersPage"
             xmlns:vm="clr-namespace:GamingApp.ViewModels"
             Title="Users">
    <ContentPage.BindingContext>
        <vm:UserViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Users}">
        <CollectionView.EmptyView>
            <Label Text="No users found" HorizontalOptions="Center" VerticalOptions="Center" />
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Entry Text="{Binding Name}" FontSize="20" TextColor="White"/>
                    <Entry Text="{Binding Username}" FontSize="20" TextColor="Aqua"/>
                    <Entry Text="{Binding Email}" FontSize="14" TextColor="Gray"/>
                    <Button x:Name="GCalderonBotonAgregar"
                                Text="AÃ±adir Persona"
                                Grid.Row="1"
                                TextColor="DarkCyan"
                                Command="{Binding SaveCommand}" />
                    <Label x:Name="GCalderonStatus"
                                Text="{Binding StatusMessage}"
                               TextColor="DarkCyan"
                               Grid.Row="2" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>